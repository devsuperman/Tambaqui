@model IEnumerable<Carro>

@{
    ViewBag.Title = "Carros";
}

@if (Model.Any())
{
    <table class="table table-hover datatable-show-all">
        <thead>
            <tr>
                <th>Descrição</th>
                <th>Ativo / Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td> @item.Modelo - @item.Cor.Nome </td>
                    <td>
                        <partial name="_AcoesIndex" Model="@item" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_DataTable");} 
}