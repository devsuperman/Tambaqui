@model IEnumerable<Cor>

@{
    ViewBag.Title = "Cores";
    ViewBag.Icone = "fa fa-tag";
}

@if (Model.Any())
{
    <ul class='list-group'>
        @foreach (var item in Model)
        {   
            <li class="list-group-item">
                <a asp-action='Editar' asp-route-id='@item.Id'>            
                    <p class='mb-0'> <strong> @item.Nome </strong></p>
                    <p> @item.DataDeCadastro.ToShortDateString() </p>                                                
                </a>
            </li>    
        }
    </ul>
}
else
{
    <partial name="_NaoHaRegistros"/>
}
